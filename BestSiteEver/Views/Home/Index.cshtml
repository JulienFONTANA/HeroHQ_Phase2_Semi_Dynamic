@using BestSiteEver.Models;

<!-- Données utilisées par la View pour afficher l'accueil -->
@model List<Hero>

<!-- Home -->
<div class="col-xs-12 col-sm-9">
    <div class="content" id="content_home">
        <h1 class="page-title">Bienvenue à la base des Héros !</h1>

        <section class="section">
            <h2 class="title">~ Nos héros disponibles ~</h2>
            <div class="heroes row">
                <!-- Affichage de quelques héros disponibles -->
                @foreach (var hero in Model)
                {
                    <div class="col-xs-6 col-sm-3 hero">
                        <a href="/Hero/Details/@hero.Id">
                            <img src=~/images/@hero.Photo alt=@hero.Nom height="175" width="150">
                            <div class="bot">
                                <p class="name">@hero.Nom</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </section>

        <!-- Affichage de la section Nouveau héro -->
        <section class="section newhero">
            <div class="row">
                <div class="col-xs-12">
                    <p class="c">Vous êtes un héros ? Rejoingez nous !</p>
                    <p class="b">
                        <a href="@Url.Action(" Create", "Hero")" class="btn btn_color1">
                            <span class="glyphicon glyphicon-plus-sign"></span>
                            <span>Créez un nouveau héros !</span>
                        </a>
                    </p>
                </div>
            </div>
        </section>
    </div>
</div>
